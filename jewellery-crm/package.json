{
  "name": "jewellery-crm",
  "version": "0.1.0",
  "private": true,
  "main": "electron/main.js",
  "scripts": {
    "dev": "next dev --turbopack",
    "dev:backend": "cd ../backend && python manage.py runserver 8000",
    "dev:frontend": "next dev --turbopack",
    "dev:both": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "build": "next build",
    "start": "next start",
    "build:export": "next build && next export -o out",
    "electron:dev": "set ELECTRON_START_URL=https://jewel-crm.vercel.app&& electron .",
    "electron:dev:offline": "npm run build:export && set ELECTRON_USE_OFFLINE=1&& electron .",
    "electron:build": "npm run icon:generate && electron-builder -w",
    "icon:generate": "node scripts/generate-icon.js",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "type-check": "tsc --noEmit",
    "security:audit": "npm audit --audit-level=high",
    "security:fix": "npm audit fix",
    "security:ci": "npm audit --audit-level=high --json > security-report.json",
    "backend:migrate": "cd ../backend && python manage.py migrate",
    "backend:makemigrations": "cd ../backend && python manage.py makemigrations",
    "backend:createsuperuser": "cd ../backend && python manage.py createsuperuser",
    "backend:shell": "cd ../backend && python manage.py shell",
    "backend:test": "cd ../backend && python manage.py test",
    "prisma:generate": "cd ../backend && prisma generate",
    "prisma:migrate": "cd ../backend && prisma migrate dev",
    "prisma:studio": "cd ../backend && prisma studio",
    "prebuild": "npm run security:audit || node -e \"process.exit(0)\"",
    "postinstall": "npm run security:audit || node -e \"process.exit(0)\""
  },
  "dependencies": {
    "@dnd-kit/core": "^6.3.1",
    "@dnd-kit/sortable": "^10.0.0",
    "@dnd-kit/utilities": "^3.2.2",
    "@heroui/calendar": "^2.2.27",
    "@heroui/react": "^2.8.5",
    "@heroui/theme": "^2.4.23",
    "@hookform/resolvers": "^5.2.1",
    "@internationalized/date": "^3.10.0",
    "@prisma/client": "^6.13.0",
    "@radix-ui/react-accordion": "^1.2.11",
    "@radix-ui/react-avatar": "^1.1.10",
    "@radix-ui/react-checkbox": "^1.3.2",
    "@radix-ui/react-dialog": "^1.1.14",
    "@radix-ui/react-dropdown-menu": "^2.1.15",
    "@radix-ui/react-icons": "^1.3.2",
    "@radix-ui/react-label": "^2.1.7",
    "@radix-ui/react-navigation-menu": "^1.2.13",
    "@radix-ui/react-popover": "^1.1.14",
    "@radix-ui/react-progress": "^1.1.7",
    "@radix-ui/react-scroll-area": "^1.2.9",
    "@radix-ui/react-select": "^2.2.5",
    "@radix-ui/react-separator": "^1.1.7",
    "@radix-ui/react-slider": "^1.3.6",
    "@radix-ui/react-slot": "^1.2.3",
    "@radix-ui/react-switch": "^1.2.5",
    "@radix-ui/react-tabs": "^1.1.12",
    "@radix-ui/react-toast": "^1.2.15",
    "@radix-ui/react-tooltip": "^1.2.7",
    "@tanstack/react-query": "^5.87.1",
    "@tanstack/react-query-devtools": "^5.87.3",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "date-fns": "^4.1.0",
    "lucide-react": "^0.534.0",
    "next": "15.5.7",
    "next-auth": "^4.24.12",
    "next-pwa": "^5.6.0",
    "next-themes": "^0.4.6",
    "prisma": "^6.13.0",
    "react": "19.1.0",
    "react-day-picker": "^9.8.1",
    "react-dom": "19.1.0",
    "react-hook-form": "^7.61.1",
    "react-phone-number-input": "^3.4.12",
    "recharts": "^3.1.0",
    "sonner": "^2.0.6",
    "tailwind-merge": "^3.3.1",
    "zod": "^4.0.14",
    "zustand": "^5.0.6"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@tailwindcss/postcss": "^4",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "concurrently": "^8.2.2",
    "electron": "^33",
    "electron-builder": "^25.1.8",
    "eslint": "^9",
    "eslint-config-next": "15.5.2",
    "jimp": "^0.22.12",
    "png-to-ico": "^2.1.8",
    "to-ico": "^1.1.5",
    "tailwindcss": "^4",
    "tw-animate-css": "^1.3.6",
    "typescript": "^5"
  },
  "build": {
    "appId": "com.jewellerycrm.app",
    "productName": "Jewellery CRM",
    "directories": {
      "buildResources": "public"
    },
    "icon": "public/icon.ico",
    "files": [
      "electron/**/*",
      "out/**/*",
      "public/**/*",
      "package.json"
    ],
    "asar": true,
    "win": {
      "icon": "public/icon.ico",
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "artifactName": "JewelleryCRM-${version}-Setup.${ext}"
    },
    "nsis": {
      "oneClick": true,
      "perMachine": false,
      "allowToChangeInstallationDirectory": false
    }
  }
}
